{
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    
    "test": "vitest",
    "test:unit": "vitest --config vitest.config.js",
    "test:unit:watch": "vitest --config vitest.config.js --watch",
    "test:coverage": "vitest run --config vitest.config.js --coverage",
    "test:coverage:watch": "vitest --config vitest.config.js --coverage --watch",
    "test:ui": "vitest --config vitest.config.js --ui",
    
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:headed": "playwright test --headed",
    
    "test:all": "npm run test:unit && npm run test:e2e",
    "test:ci": "npm run test:coverage && npm run test:e2e",
    
    "lint": "eslint src --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint src --ext .js,.jsx,.ts,.tsx --fix"
  },
  "devDependencies": {
    "@playwright/test": "^1.49.1",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/user-event": "^14.5.2",
    "@types/node": "^22.10.2",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9.17.0",
    "eslint-plugin-vitest": "^0.5.4",
    "faker": "^6.6.6",
    "jsdom": "^26.1.0",
    "msw": "^2.7.0",
    "sass": "^1.89.2",
    "vite": "^7.0.4",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@popperjs/core": "^2.11.8",
    "@supabase/supabase-js": "^2.51.0",
    "bootstrap": "^5.3.7",
    "flatpickr": "^4.6.13",
    "google-charts": "^2.0.0",
    "imask": "^7.6.1"
  }
}